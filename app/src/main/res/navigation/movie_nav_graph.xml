<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/movie_nav_graph"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment" android:name="com.rubicon.whiteeblack.movieapp.HomeFragment"
              android:label="Movie" tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_homeFragment_to_detailFragment" app:destination="@id/detailFragment"/>
    </fragment>
    <fragment android:id="@+id/moviesFragment" android:name="com.rubicon.whiteeblack.movieapp.MoviesFragment"
              android:label="MoviesFragment">
    </fragment>
    <fragment android:id="@+id/detailFragment" android:name="com.rubicon.whiteeblack.movieapp.DetailFragment"
              android:label="DetailFragment">
        <argument app:argType="string" android:name="title"/>
        <argument android:name="imageUrl" app:argType="string"/>
        <argument android:name="description" app:argType="string"/>
    </fragment>
</navigation>